@model List<AppWeb.Models.Eliminacion>

@{
    ViewData["Title"] = "Solicitudes Eliminadas";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container px-3 px-md-5 pt-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-trash-fill fs-3 text-danger me-2"></i>
        <h4 class="fw-bold text-danger mb-0">Solicitudes Eliminadas</h4>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th><i class="bi bi-calendar2-week"></i> Fecha de Eliminación</th>
                    <th><i class="bi bi-exclamation-circle"></i> Motivo</th>
                    <th><i class="bi bi-upc-scan"></i> Código</th>
                    <th><i class="bi bi-person-fill"></i> Solicitante</th>
                    <th><i class="bi bi-pencil-fill"></i> Eliminado por</th>
                    <th><i class="bi bi-journal-text"></i> Detalle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.FechaEliminacion.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td class="text-start">@item.Motivo</td>
                        <td class="fw-semibold">@item.CodigoSolicitud</td>
                        <td>@item.UsuarioSolicitante</td>
                        <td>@item.UsuarioEliminador</td>
                        <td class="text-start">@item.Detalle</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver
        </a>
    </div>
</div>
