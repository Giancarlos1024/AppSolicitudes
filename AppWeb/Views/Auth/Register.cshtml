@{
    ViewData["Title"] = "Registro";
    Layout = null; // Control total del diseño
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Registro - AppWeb</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Formulario -->
            <div class="col-md-6 split-left">
                <div class="form-container">
                    <div class="mb-4 text-start">
                        <div class="logo mb-2">
                            <span class="bg-primary text-white px-2 py-1 rounded">A</span> <span>AppWeb</span>
                        </div>
                        <h3 class="fw-bold">Registro de usuario</h3>
                        <p class="text-muted">Crea una cuenta nueva para acceder</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label for="usuario" class="form-label">Nombre de usuario</label>
                            <input type="text" name="usuarioNombre" class="form-control" placeholder="Ej: admin" required />
                        </div>
                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña</label>
                            <input type="password" name="contrasena" class="form-control" placeholder="********" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Crear cuenta</button>

                        @if (ViewBag.Mensaje != null)
                        {
                            <div id="alerta" class="alert alert-danger mt-3 text-center">
                                @ViewBag.Mensaje
                            </div>
                        }
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">¿Ya tienes una cuenta?</p>
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary btn-sm mt-2">
                            Iniciar sesión
                        </a>
                    </div>
                </div>
            </div>

            <!-- Imagen a la derecha (opcional) -->
            <div class="col-md-6 split-right2 d-none d-md-block"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ocultar alerta después de 3 segundos
        setTimeout(() => {
            const alerta = document.getElementById('alerta');
            if (alerta) alerta.style.display = 'none';
        }, 3000);
    </script>
</body>
</html>
